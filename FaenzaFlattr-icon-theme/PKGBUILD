# Maintainer: Antergos Devs <devs@antergos.com>

pkgname=FaenzaFlattr
pkgver=0.4
pkgrel=1
pkgdesc="Flattr icon theme for KDE4 with KFaenza as fallback."
url="http://kde-look.org/content/show.php/FaenzaFlattr?content=164770"
license=('CCPL')
arch=('any')
depends=('kfaenza-icon-theme')
# Temporarily host source file until author sets up direct download link
source=("http://antergos.info/FaenzaFlattr-0.4.7z")
md5sums=('f212d9979ffa5f162ba240698c44df9b')
options=(!strip)

package() {
  install -d $pkgdir/usr/share/icons
  cp -r $srcdir/FaenzaFlattr $pkgdir/usr/share/icons/

  cd ${pkgdir}/usr/share/icons/FaenzaFlattr
  sed -i 's|Inherits=|Inherits=KFaenza,hicolor|g' index.theme
  sed -i 's|Inherits=Flattr|Inherits=KFaenza,hicolor|g' index.theme.kde

  find $pkgdir/usr -type f -exec chmod 644 {} \;
  find $pkgdir/usr -type d -exec chmod 755 {} \;
  find $pkgdir/usr -type f -name '.directory' -delete

}
