# Maintainer: Dustin Falgout <dustin@antergos.info>

pkgname=lightdm-webkit-theme-antergos
_pkgname=antergos
pkgver=1.1.4.1
pkgrel=1
pkgdesc="The official greeter theme of Antergos Linux"
arch=('any')
url="http://www.antergos.com"
license=('GPLv2')
depends=('lightdm' 'lightdm-webkit-greeter' 'antergos-wallpapers')
install=theme.install
source=("${pkgname}-${pkgver}.tar.gz::https://github.com/Antergos/${pkgname}/archive/${pkgver}.tar.gz")
sha256sums=('473f15f89c18115a80048bc546b76f95e48a27d857cb07f7cc743346867fbdd1')

build()
{
	cd ${srcdir}/${pkgname}-${pkgver}
}

package()
{
	cd ${pkgdir}
	mkdir -p usr/share/lightdm-webkit/themes
	cd usr/share/lightdm-webkit/themes
	cp -dpr --no-preserve=ownership ${srcdir}/${pkgname}-${pkgver} ${_pkgname}
	msg "Removing .git files"
	cd ${_pkgname}
	rm -rf .gitignore
}
