# Maintainer: Alexandre Filgueira <alexfilgueira@cinnarch.com>

pkgname=mdm-themes
pkgver=20130301
pkgrel=1
pkgdesc="Themes for the MDM display manager"
url="https://github.com/linuxmint/mdm"
arch=('any')
license=('GPL3')
depends=('mdm-display-manager')
source=("http://storage.cinnarch.com/${pkgname}.tar.gz")
sha256sums=('d2e8a298c99550fdceb9c78b651abe3c67402fd66c79c0ee14fdb3a4c13c7cc6')

package() {
    cd ${srcdir}
    install -d m755 ${pkgdir}/usr/share/mdm
    cp -R themes ${pkgdir}/usr/share/mdm
} 

