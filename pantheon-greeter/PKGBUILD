pkgname=pantheon-greeter
pkgver=1.0
pkgrel=10
pkgdes="LightDM greeter from the ElementaryOS team written in Vala "
arch=('i686' 'x86_64')
url="https://launchpad.net/pantheon-greeter"
license=('GPL')
groups=('lightdm')
depends=('granite>=0.1.1' 'libindicator3' 'clutter-gtk' 'cinnarch-wallpapers' 'lightdm>=1.5.1-3')
makedepends=('vala' 'cmake')
provides=('pantheon-greeter')
install=${pkgname}.install
source=("${pkgname}.tar.gz")


build(){
  cp -r "$srcdir/${pkgname}" "$srcdir/${pkgname}-build"
  cd "$srcdir/${pkgname}-build"
  [ -d build ] && rm -rf build
  mkdir build
  cd build
  CFLAGS="$CFLAGS -lm -Wno-deprecated-declarations"
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr
  make ${MAKEFLAGS}
}

package(){
	cd "${srcdir}/${pkgname}-build/build"

	make DESTDIR="${pkgdir}" install
}

md5sums=('2c0ad01dd91636588fdc3c3ddcec935e')