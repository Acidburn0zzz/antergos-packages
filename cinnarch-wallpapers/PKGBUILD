# Maintainer: Alexandre Filgueira <alexfilgueira@cinnarch.com>

pkgname=cinnarch-wallpapers
pkgver=0.5
pkgrel=1
pkgdesc="The default wallpapers for Cinnarch"
arch=('any')
url="http://www.cinnarch.com"
license=('CCPL:by-nc-sa')
source=("http://www.cinnarch.com/cinnarch_build/${pkgname}-${pkgver}.tar.gz")
md5sums=('5c53774923ecace0f61eec2597bc8829')

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  install -d "${pkgdir}/usr/share/cinnarch/wallpapers"
  install -m644 *.jpg "${pkgdir}/usr/share/cinnarch/wallpapers/"
  install -m644 *.png "${pkgdir}/usr/share/cinnarch/wallpapers/"

  install -d "${pkgdir}/usr/share/gnome-background-properties"
  install -m644 cinnarch-backgrounds-4-3.xml "${pkgdir}/usr/share/gnome-background-properties/"
}